{
    "compilerOptions": {
        "target": "es2016",
        "module": "es2022",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowJs": true,
        "outDir": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./"
    ],
    "exclude": [
        "views"
    ]
}